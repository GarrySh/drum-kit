.drum-kit
	display flex
	flex-wrap wrap
	align-items center
	justify-content center

.drum-kit__key
	flex 0 0 auto
	width 80px
	margin 10px
	height 80px
	border 4px solid black
	border-radius 10px
	background rgba(0, 0, 0, 0.4)
	transition all 0.15s ease
	color white
	text-align center
	text-transform uppercase

.drum-kit__key--active
	transform scale(1.1)
	border-color #ffc600
	box-shadow 0 0 1rem #ffc600

.drum-kit__key-title
	display block
	margin 10px auto
	font-size 30px
	font-weight bold

.drum-kit__key-description
	display block
	font-size 14px
	color #ffc600
